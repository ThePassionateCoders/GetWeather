						cols: 1
						size_hint: (1, None)
						height: self.minimum_height
						spacing: 20
						padding: 20

						MDLabel:
							id: city_info
							size_hint: (1, None)
							adaptive_height: True
							markup: True
							text: f"{app.selected_city.text}, {app.selected_city.secondary_text}"
							font_size: dp(30)
							padding: (10, 0)

						MDCard:
